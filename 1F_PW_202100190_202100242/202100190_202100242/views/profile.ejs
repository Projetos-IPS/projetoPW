    <section class="main">

      <div id="page-mask"></div>
      <section id="pop-up-edit" class="pop-up-edit">
   
        <section class="pop-up-header">
        <h3>Edit profile</h3>
        <button class="close-btn" onclick="closeEditIntro()"><i class="fa-solid fa-x" style="font-size: 20px; color: #7088B0;"></i></button>
        </section>

        <hr >
        <section class="pop-up-form">

      <p>* Indicates required</p>
        <form class="editProfileP" method="post" action="/Profile/editUserIntro" id="editProfileP">
          <label for="nameUser">Name*</label><br/>
          <input id="nameUser" type="text" name="nameUser" ><br><br/>
          <label for="headline">Headline*</label><br/>
          <input id="headlineUser" type="text" name="headline" ><br><br/>
          <hr>
          <h3>Location</h3>
          <label for="locationUser">Country/Region*</label><br/>
          <input id="locationUser" type="text" name="locationUser" ><br><br/>
          <hr>
          <h3>Portfolio</h3>
          <label for="portfolioUser">Submit portfolio</label><br/>
          <input type="file" name="portfolioUser" ><br><br/>
          <label for="approvalPortfolio">Do you wish to allow others to see your portfolio?</label>
          <input type="radio" id="radio0" name="portfolioApproval" value="0" > No <!-- 0 - FALSE-->
          <input type="radio" id="radio1" name="portfolioApproval" value="1" > Yes   <!-- 1 TRUE-->
      </section>
      <hr >
      <button type="submit">Save</button>
    </form>
    
     </section>

     <!--------------------------------------------------------------->
