button#myBtn(onclick='topFunction()', title='Go to top') &#xFE3F;
// header
header.side
  a(href='Homepage')
    img(src='../images/newLogo.png', alt='Logo')
  hr
  nav.side-under
    a.link(href='Homepage')
      p Home
    a.link(href='#network')
      p My Network
    a.link-active(href='Job offers')
      p Job Offers
  hr
  nav.side-under
    a.link(href='Team')
      p Team
